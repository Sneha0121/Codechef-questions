#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
    int t;
    scanf("%d", &t);
    while(t--) {
        int n,x;
        scanf("%d %d", &n, &x);
        int min_slices = n*x; //number of slices
        if (min_slices%4==0) {
            printf("%d\n",min_slices/4);
        } else {
            printf("%d\n",min_slices/4 +1);
        }
        
    }
}
