#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int a,b,c;
	    cin>>a>>b>>c;
	    int lowest;
	    if(a<=b && a<=c) lowest = a;
	    else if(b<=a && b<=c) lowest = b;
	    else lowest = c;
	    
	    if(a==lowest) cout<<b+c<<endl;
	    else if(b==lowest) cout<<a+c<<endl;
	    else cout<<a+b<<endl;
	}

}
